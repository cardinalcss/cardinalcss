/* ================================================================== *\
   Forms ($forms)
\* ================================================================== */

/**
 * 1. Avoid the WebKit bug in Android 4.0.* where (2) destroys native
 *    <audio> and <video> controls
 * 2. Improve usability and consistency of cursor style between
 *    image-type <input> and others
 */

button, 
html input[type="button"], /* 1 */
input[type="checkbox"], 
input[type="file"], 
input[type="image"], 
input[type="radio"], 
input[type="reset"], 
input[type="submit"], 
label, 
select {
    cursor: pointer; /* 2 */
}

/**
 * 1. Remove default `border` and `padding` across browsers
 * 2. Set `min-width` to 0 to avoid overflow issues in Chrome
 */

fieldset {
    padding: 0;   /* 1 */
    min-width: 0; /* 2 */
    border: 0;    /* 1 */

    /* Remove `margin-bottom` from the last element in a <fieldset> */
    > *:last-child {
        margin-bottom: 0;
    }
}

@media only screen and (min-width: $grid-breakpoint-medium) {
    fieldset {
        font-size: 1.125rem;
    }
}

/* Add this class for a bordered <fieldset> */
.fieldset-border {
    padding: $base-rem-unit;
    border: 1px solid $gray-light;
}

/* Make checkbox, image, and radio inputs `inline-block` by default */
input[type="checkbox"], 
input[type="image"], 
input[type="radio"] {
    display: inline-block;
    width: auto;
}

/**
 * Give inputs, selects, and textareas some basic styles
 */

input[type="date"], 
input[type="datetime"], 
input[type="datetime-local"], 
input[type="email"], 
input[type="month"], 
input[type="number"], 
input[type="password"], 
input[type="search"], 
input[type="tel"], 
input[type="text"], 
input[type="time"], 
input[type="url"], 
input[type="week"], 
select, 
textarea {
    display: block;
    padding: $input-padding;
    width: 100%;
    outline: 0 none;
   *outline: thin dotted #222 \9; /* IE 6-8 */
    border: $input-border-width solid $input-border-color;
    border-radius: 0;
    vertical-align: middle;
    line-height: $input-line-height;

    &:focus {
        outline: 0 none;
        box-shadow: inset 0.1rem 0.1rem 0.238rem hsla(0, 0%, 0%, 0.15);
    }
}


/**
 * 1. Constrict `max-width` for file inputs to avoid overflow issues
 */

input[type="file"] {
    max-width: 100%; /* 1 */
    cursor: pointer;
}

input[type="search"] {
    box-sizing: border-box;
}

/**
 * 1. Remove `padding` so people aren't caught out if they zero out fieldsets
 * 2. Correct `color` not being inherited in IE 8/9
 */

legend {
    padding: 0; /* 1 */
    border: 0;  /* 2 */
    color: $black;
    font-weight: $heading-font-weight;
}

/* If <fieldset> has a border, give its <legend> different styles */
.fieldset-border legend {
    margin: 0;
    padding: 0 0.356rem;
    background: $white;
}

/* Give <select> menus a different background */
select {
    height: $select-height;
    background: $select-background;

    &:focus {
        outline: 1px dotted $black;
    }
}

/**
 * 1. Set a `max-height` on <select> in Firefox only
 */

@-moz-document url-prefix() {
    select {
        max-height: 40px;   /* 1 */
        height: auto;
    }
}

/**
 * 1. Restrict <textarea> elements to vertical resizing only
 */

textarea {
    resize: vertical; /* 1 */
}
